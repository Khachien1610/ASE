<div class="mt-4 min-height">
    <div class="mb-4 d-flex justify-content-between align-items-center pr-5">
        <div class="d-flex align-items-center">
            <h3>Danh sách đơn hàng</h3>
        </div>
    </div>
    <table class="table table-hover border text-center">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th>Mã đơn hàng</th>
                <th>Tổng tiền</th>
                <th>Điểm tích lũy</th>
                <th>Trạng thái</th>
                <th>Thời gian đặt</th>
                <th>Hủy đơn hàng</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>
                    <a href="/order/{{this._id}}/process">{{this._id}}</a>
                </td>
                <td>{{ this.remainder }}</td>
                <td>{{ this.point }}</td>
                {{#if this.process}}
                    <td>Đã xử lý</td>
                {{else}}
                    <td>Chưa xử lý</td>
                {{/if}}
                <td>{{ this.createdAt }}</td>
                <td>
                    <a href="/order/{{this._id}}/delete">
                        <i class="fa fa-times text-danger"></i>
                    </a>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="8" class="text-center">
                    Không có đơn hàng nào.
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
