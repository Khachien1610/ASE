<div class="d-flex justify-content-between px-5 my-3 align-items-center">
  <a href="/">
    <img src="https://bucket.nhanh.vn/store/4902/store_1529314462_290.jpg" alt=""
      style="max-width:100%; height: auto; max-height: 50px;">
  </a>
  <ul class="navbar-nav ml-auto">
    <li class="nav-item dropdown">
      {{#if username}}
      <a class="nav-link dropdown-toggle" href="/" id="navbarDropdown" role="button" data-toggle="dropdown">
        {{#if person}}
        <img src="../../{{person.image}}" alt="IMAGE ERROR" class="avatar__user">
        <span>{{username}}</span>
        {{else}}
        <img src="https://res.cloudinary.com/dtuy8d4mx/image/upload/v1608045659/default-avatar_ykikk8.png" alt="" class="avatar__user">
        <span>{{username}}</span>
        {{/if}}
      </a>
      {{else}}
      <a href="/login" class="btn btn-outline-primary">Đăng nhập</a>
      <a href="/register" class="btn btn-outline-primary">Đăng ký</a>
      {{/if}}
      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
      {{#unless admin}}
        <a class="dropdown-item" href="/infoaccount">Thông tin tài khoản</a>
      {{/unless}}
        <a class="dropdown-item" href="/logout">Đăng xuất</a>
      </div>
    </li>
</div>

{{#if admin}}
<nav class="navbar navbar-admin navbar-expand-lg navbar-primary bg-primary px-5 py-0">
  <a class="navbar-brand navbar__item" href="/admin/stored/products">Quản lý sản phẩm</a>
