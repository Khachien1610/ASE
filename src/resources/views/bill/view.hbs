<div class="mt-5 mb-5 container min-height">
    <h1 class="text-center">Chi tiết hóa đơn</h1>
    <div class="my-4">
        <h5>
            <span>Tên khách hàng:</span>
            <span class="ml-3 font-italic text-muted">{{ customer.name }}</span>
        </h5>
        <h5>
            <span>Số điện thoại:</span>
            <span class="ml-3 font-italic text-muted">{{ customer.phone }}</span>
        </h5>
        <h5>
            <span>Địa chỉ:</span>
            <span class="ml-3 font-italic text-muted">{{ customer.address }}</span>
        </h5>
    </div>
    <table class="table table-hover border text-center">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên sản phẩm</th>
                <th>Đơn giá</th>
                <th>Giảm giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            {{#each orderSuccess}}
            <tr>
                <th>{{sum @index 1}}</th>
                <td>{{ this.name }}</td>
                <td>{{ this.cost }} VNĐ</td>
                <td>{{ this.sale }} %</td>
                <td>{{ this.count }}</td>
                <td>{{ this.afterSale }} VNĐ</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{#if sum}}
    <div class="ml-auto w-50">
        <h5 class="d-flex justify-content-between">
            <span class="text-muted">Tổng tiền tạm tính:</span>
            <span class="ml-3 text-danger">{{ this.sum }} VNĐ</span>
        </h5>
        <h5 class="d-flex justify-content-between">
            <span class="text-muted">Điểm tích lũy dùng:</span>
            <span class="ml-3 text-danger">{{ this.point }}</span>
        </h5>
        <h5 class="d-flex justify-content-between">
            <span class="text-muted">Phí vận chuyển:</span>
            <span class="ml-3 text-danger">{{ this.ship }} VNĐ</span>
        </h5>
        <h5 class="d-flex justify-content-between">
            <span class="text-muted">Tổng tiền:</span>
            <span class="ml-3 text-danger">{{ this.remainder }} VNĐ</span>
        </h5>
    </div>
    {{/if}}
    <p class="text-right mt-4 font-weight-bold">Nhân viên bán hàng</p>
    <p class="text-right mr-5 font-italic">{{ this.staff }}</p>
    <div class="text-right mt-4">
        <button onclick="window.print()" class="btn btn-success btn-none">Xuất hóa đơn</button>
    </div>
</div>