<div class="mt-4 product__create min-height">
    <h4 class="ml-3 d-inline py-2 px-3 bg-primary text-white">Nhà cung cấp</h4>
    <form action="" method="POST" class="col-3 mt-4">
        <div class="form-group">
            <label for="name">Tên nhà cung cấp:</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Nhập tên của nhà cung cấp...">
        </div>
        <div class="form-group">
            <label for="phone">Số điện thoại:</label>
            <input type="text" name="phone" class="form-control" id="phone" placeholder="Số điện thoại của nhà cung cấp...">
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="Email của nhà cung cấp...">
        </div>
        <div class="form-group">
            <label for="address">Địa chỉ:</label>
            <input type="text" name="address" class="form-control" id="address" placeholder="Địa chỉ của nhà cung cấp...">
        </div>
        <button type="submit" class="btn btn-success">Thêm nhà cung cấp</button>
    </form>
</div>